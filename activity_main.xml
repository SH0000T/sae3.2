<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Bouton pour accéder au mode client -->
    <Button
        android:id="@+id/btnClient"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Mode Client"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Bouton pour accéder au mode serveur -->
    <Button
        android:id="@+id/btnServer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Mode Serveur"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Bouton pour voir les utilisateurs -->
    <Button
        android:id="@+id/btnViewUsers"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Voir Utilisateurs"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>
